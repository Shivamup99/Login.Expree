<%- include('header') -%>
    

<div class="text-center center-div" id="login">

    <div class="container w-25 border py-5">
        <div class="title">
            <h2 class="font-weight-bold">Login Page</h2>

            <span>Log in for the HomePage</span>
        </div>

        <form action="/route/login" method="POST" class="py-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="emai">
                <small class="form-text text-muted text-left mb-2">Register Email Address</small>
            </div>

            <div class="form-group">
                <input type="password" class="form-control mb-3" name="password" placeholder="password">

            </div>

            <button type="submit" class="btn btn-success rounded-pill">Submit</button>

        </form>
    </div>
</div>


<%- include('footer') -%>